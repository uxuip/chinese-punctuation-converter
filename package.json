    "@types/vscode": "^1.80.0",
    "@uxuip/eslint-config-ts": "^0.1.7",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
